<p id="notice"><%= notice %></p>
<h2> Post show page </h2>
<p>
  <strong>Post Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Post Body:</strong>
  <%= @post.body %>
</p>
<div id="comments">
  <% @post.comments.reverse.each { |comment| %>
    <div style="padding:5px">
      <%= comment.body %> posted on <%= comment.created_at.strftime("%d-%m-%Y %H:%m") %> </div>
  <%  }   %>
</div>

<div id="new_comment">
  <h3> Post your comments </h3>
  <%= form_for([@post, Comment.new]) do |comment_form| %>
    <%= comment_form.text_area :body  %>
    <%= comment_form.submit 'Post Comment' %>
  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
